{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@ui": ["src/components/ui"],
      "@ui/*": ["src/components/ui/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      "@graphql": ["src/graphql"],
      "@graphql/*": ["src/graphql/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}


